@model DoAnCoSo.Models.BaiThi
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Cập nhật đề thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật đề thi</h2>

<form asp-controller="DeThi" asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaDe" />
    <div class="form-group">
        <label asp-for="TenBaiThi" class="control-label"></label>
        <input asp-for="TenBaiThi" class="form-control" />
        <span asp-validation-for="TenBaiThi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ThoiGianLamBai" class="control-label"></label>
        <input asp-for="ThoiGianLamBai" class="form-control" />
        <span asp-validation-for="ThoiGianLamBai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuongCauHoi" class="control-label"></label>
        <input asp-for="SoLuongCauHoi" class="form-control" />
        <span asp-validation-for="SoLuongCauHoi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mota" class="control-label"></label>
        <textarea asp-for="Mota" class="form-control"></textarea>
        <span asp-validation-for="Mota" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </div>
</form>


<script>
    document.querySelectorAll('input[type="file"]').forEach(input => {
        input.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById("previewImage")
                    img.src = e.target.result
                };
                reader.readAsDataURL(file);
            }
        });
    });
</script>