@model DoAnCoSo.Models.BaiThi

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Bai Thi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenBaiThi" class="control-label"></label>
                <input asp-for="TenBaiThi" class="form-control" />
                <span asp-validation-for="TenBaiThi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianLamBai" class="control-label"></label>
                <input asp-for="ThoiGianLamBai" class="form-control" type="number" min="1" max="240" required
                       title="Thời gian thi không được vượt quá 240 phút." />
                <span asp-validation-for="ThoiGianLamBai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongCauHoi" class="control-label"></label>
                <input asp-for="SoLuongCauHoi" class="form-control" type="number" min="1" max="100" required
                       title="Số lượng câu hỏi không được vượt quá 100." />
                <span asp-validation-for="SoLuongCauHoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
