@model IEnumerable<DoAnCoSo.Models.LichSuLamBai>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch Sử Làm Bài</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f8ff; /* Sky blue background */
            font-family: Arial, sans-serif;
        }

        .table-container {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #007bff; /* Sky blue */
            color: #ffffff;
            text-align: center;
        }

        .table tbody td {
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: #e9f5ff; /* Light sky blue */
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f5fff5; /* Light green */
        }

        .table tbody tr:hover {
            background-color: #d1ecf1; /* Light blue hover */
        }

        .highlight-score {
            font-size: 20px;
            color: #198754; /* Dark green */
        }

        h2 {
            text-align: center;
            color: #007bff; /* Sky blue */
            margin-bottom: 20px;
        }

        .footer {
            margin-top: 20px;
            padding: 10px 0;
            color: black;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lịch Sử Làm Bài</h2>
        <div class="table-container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã Đề Thi</th>
                        <th>Số Câu Đúng</th>
                        <th>Điểm</th>
                        <th>Thời Điểm Hoàn Thành</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model)
                    {
                        <tr>
                            <td>@history.KetQua.Madt</td>
                            <td>@history.KetQua.SoCauDung</td>
                            <td class="highlight-score">@history.KetQua.Diem.ToString("F2")</td>
                            <td>@history.ThoiDiemLamBai</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer">
        &copy; 2024 - Do An Co So
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
